import java.util.Scanner;

public class Exercicio5 {

	public static void main(String[] args) {
		// Com base na tabela abaixo, escreva um programa que leia o código de um item e a quantidade deste item. A
		// seguir, calcule e mostre o valor da conta a pagar
		Scanner sc = new Scanner(System.in);
		
		int codigo, qtde;
		double total;
		
		System.out.println("LOJA DO GALO!");
		System.out.println("[1] Cachorro Quente - R$ 4.00");
		System.out.println("[2] X-Salado - R$ 4.50");
		System.out.println("[3] X-Bacon - R$ 5.00");
		System.out.println("[4] Torrada Simples - R$ 6.00");
		System.out.println("[5] Refrigerante - R$ 1.50");
		System.out.println("[6] Sair do Sistema");
		System.out.println("Entre o Código do produto:");
		codigo = sc.nextInt();	
		
		if (codigo == 1) {
			System.out.println("Entre a quantidade desejada: ");
			qtde = sc.nextInt();
			total = qtde * 4;
			System.out.println(qtde + " Cachorros Quentes dão um total de R$ " + total);
		}
		else if (codigo == 2) {
			System.out.println("Entre a quantidade desejada: ");
			qtde = sc.nextInt();
			total = qtde * 4.5;
			System.out.println(qtde + " X-Saladas dão um total de R$ " + total);
		}
		else if (codigo == 3) {
			System.out.println("Entre a quantidade desejada: ");
			qtde = sc.nextInt();
			total = qtde * 5;
			System.out.println(qtde + " X-Bacon dão um total de R$ " + total);			
		}
		else if (codigo == 4) {
			System.out.println("Entre a quantidade desejada: ");
			qtde = sc.nextInt();
			total = qtde * 6;
			System.out.println(qtde + " Torradas Simples dão um total de R$ " + total);
		}
		else if (codigo == 5) {
			System.out.println("Entre a quantidade desejada: ");
			qtde = sc.nextInt();
			total = qtde * 2;
			System.out.println(qtde + " Refrigerantes dão um total de R$ " + total);
		}
		else{
			System.out.println("Obrigado pela preferencia");			
		}			
		
	sc.close();	
	}

}
